<struts>
 <!-- struts基础配置文件，包含全局result -->
	<package name="client" extends="base"  namespace="/client">
		<action name="*_*" class="com.crm.action.ClientAction" method="{1}{2}">
			<result name="clientList">/WEB-INF/Template/clientmanagement/clientlist.jsp</result>
			<result name="clientDetail">/WEB-INF/Template/clientmanagement/clientinformation.jsp</result>
			<result name="clientUpdate">/WEB-INF/Template/clientmanagement/clientinformation.jsp</result>
			<result name="linkMans">/WEB-INF/Template/clientmanagement/linkman.jsp</result>
			<result name="createLinkMan">/WEB-INF/Template/clientmanagement/createlinkman.jsp</result>
			<result name="activity">/WEB-INF/Template/clientmanagement/contractrecord.jsp</result>
			<result name="createActivity">/WEB-INF/Template/clientmanagement/createcontractrecord.jsp</result>
			<result name="indent">/WEB-INF/Template/clientmanagement/historyindent.jsp</result>
			<result name="indentDetail">/WEB-INF/Template/clientmanagement/indentdetail.jsp</result>
		
			<result name="lstList">/WEB-INF/Template/clientmanagement/lossclient.jsp</result>
			<result name="lstDetail">/WEB-INF/Template/clientmanagement/temloss.jsp</result>
			<result name="sureLst">/WEB-INF/Template/clientmanagement/confirmloss.jsp</result>
		</action>
		
	</package>
	
	
</struts>    
